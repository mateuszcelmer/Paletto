<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_list_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/imv_image_detail_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/div_center"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_name_detail_activity"
        style="@style/Text.Primary.white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rec_list_of_colors_detail_activity"
        android:background="@color/colorTransparentBlack"
        android:padding="16dp"
        android:text="IMG_03200042.jpg" />

    <View
        android:id="@+id/div_center"
        style="@style/Text.Primary"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_list_of_colors_detail_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div_center"
        android:padding="0dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
